<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.advertproject.profile.ViewProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Profile"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/advertapplogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First name: "
        android:layout_marginTop="260dp"
        android:layout_marginLeft="53dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last name: "
        android:layout_marginTop="300dp"
        android:layout_marginLeft="53dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email address: "
        android:layout_marginTop="340dp"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone number: "
        android:layout_marginTop="380dp"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_first_name"
        android:hint=""
        android:layout_marginTop="260dp"
        android:layout_marginLeft="150dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_last_name"
        android:hint=""
        android:layout_marginTop="300dp"
        android:layout_marginLeft="150dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_email"
        android:hint=""
        android:layout_marginTop="340dp"
        android:layout_marginLeft="150dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_phone_number"
        android:hint=""
        android:layout_marginTop="380dp"
        android:layout_marginLeft="150dp"
        android:textSize="16sp"/>

</RelativeLayout>
